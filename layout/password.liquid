				enableYotpo: {{ settings.enable_yotpo | json }},
				showProductDescription: {{ settings.show_quick_view_description | json }},
				showQuickView: {{ settings.show_quick_view | json }},
				showQuantity: {{ settings.show_quantity | json }},
				showReviews: {{ settings.show_reviews | json }},
				yotpoId: {{ settings.yotpo_ID | json }},
				imageAspectRatio: {{ settings.image_aspect_ratio | json }},
				imageBackgroundSize: {{ settings.image_size | json }},
				productBadgeStyle: {{ settings.product_badge_style | json }},
				searchType: {{ settings.search_type | json }},
				productTitlePosition: {{ settings.product_title_position | json }}
