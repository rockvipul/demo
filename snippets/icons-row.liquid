{%- assign alignment = block.settings.alignment_icons -%}
{%- assign background = block.settings.color_icons_bg -%}
{%- assign color = block.settings.color_icons_text -%}

<div class="icons-row--background pad-sm" style="color: {{ color }}; background-color: {{ background }};">
  <div class="container">
    <div class="row">
      <div class="icons-row-wrapper icons-row-wrapper--{{ alignment }}">
        {%- for i in (1..3) -%}
          {%- assign title_key = 'title_' | append: i -%}
          {%- assign content_key = 'content_' | append: i -%}
          {%- assign icon_key = 'icon_name_' | append: i -%}
          {%- assign image_key = 'icon_image_' | append: i -%}

          {%- assign title = block.settings[title_key] -%}
          {%- assign content = block.settings[content_key] -%}
          {%- assign image = block.settings[image_key] -%}
          {%- assign icon = block.settings[icon_key] -%}

          {%- render 'icons-row__item', title: title, content: content, image: image, icon: icon -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
