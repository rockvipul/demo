<div class="jb-product-collateral">
  <div class="tab-content">
    <div class="tabs" id="tab4" >
      <div class="container"  >
        <div class="row">
          <div class="feature-item " data-alignment="center">
            <div class="feature-image">
              {% if block.settings.image %}
              <div class="feature-image-bg" style="height:100%">
                <div class="svg-placeholder">
                <img src="{{block.settings.image | img_url:'master'}}">
                </div>
              </div>
              {% endif %}
            </div>
            <div class="feature-text">
              <div class="feature-text-wrap">
                {% if block.settings.subtitle %}
                <h5 class="sec6subtitle">
                  {{block.settings.subtitle}}
                </h5>
                {% endif %} 
                {% if block.settings.title %}
                <h2 data-animation="moPopUp" data-animation-delay="0">
                  {{ block.settings.title }}
                </h2>
                {% endif %}
                {% if block.settings.description != blank %}
                <div class="feature-text__p" data-animation="moPopUp" data-animation-delay="250">
                  {{block.settings.description}}
                </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>