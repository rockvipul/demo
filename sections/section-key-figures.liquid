<div class="jb-product-collateral"> 
<div class="tab-content">
    <div class="tabs" id="tab3" {% if section.settings.bg_color_enable != blank %}{% if section.settings.bg_color != blank %} style="background-color: {{ section.settings.bg_color }}" {% endif %}{% endif %}>
   <div class="container">
      <h2 class="tab-content-title">
     	{% if section.settings.title != blank %}
            {{ section.settings.title }} 
        {% endif %}
      </h2>
    </div>
    <div class="tab-content-bg-inner">
  	 <div class="left-section">
      <div class="left-section-inner">
         <div class="grid">
            <div class="grid-number">
     	{% if section.settings.num1 != blank %}
            {{ section.settings.num1 }} 
        {% endif %}
      </div>
            <div class="grid-text">
     	{% if section.settings.num1_title != blank %}
            {{ section.settings.num1_title }} 
        {% endif %}
           </div>
            <div class="grid-sub-text">
     	{% if section.settings.num1_detail != blank %}
            {{ section.settings.num1_detail }} 
        {% endif %}
           </div>
         </div>
         <div class="grid">
            <div class="grid-number">
     	{% if section.settings.num2 != blank %}
            {{ section.settings.num2 }} 
        {% endif %}
      </div>
            <div class="grid-text">
     	{% if section.settings.num2_title != blank %}
            {{ section.settings.num2_title }} 
        {% endif %}
           </div>
            <div class="grid-sub-text">
     	{% if section.settings.num2_detail != blank %}
            {{ section.settings.num2_detail }} 
        {% endif %}
           </div>
         </div>
         <div class="grid">
            <div class="grid-number">
     	{% if section.settings.num3 != blank %}
            {{ section.settings.num3 }} 
        {% endif %}
      </div>
            <div class="grid-text">
     	{% if section.settings.num3_title != blank %}
            {{ section.settings.num3_title }} 
        {% endif %}
           </div>
            <div class="grid-sub-text">
     	{% if section.settings.num3_detail != blank %}
            {{ section.settings.num3_detail }} 
        {% endif %}
           </div>
         </div>
      </div>
   </div>
   <div class="right-section">
      <div class="right-section-inner">
     	{% if section.settings.detail != blank %}
            {{ section.settings.detail }} 
        {% endif %}
      </div>
   </div>
</div>
</div>
  
</div>  
</div>

{% schema %}
  {
    "name": "Key Figures",
    "settings": [
	{
			"type": "checkbox",
            "id": "bg_color_enable",
            "label": "Enable Background Color",
			"default": true
		},
		{
			"type": "color",
            "id": "bg_color",
            "label": "Background Color",
			"default": "#e73439"
		},{
      "type": "text",
      "id": "title",
      "label": "Title"
    },
	{
      "type": "text",
      "id": "num1",
      "label": "Figures Number 1"
    },
	{
      "type": "text",
      "id": "num1_title",
      "label": "Figures Number 1 Title"
    },
	{
      "type": "text",
      "id": "num1_detail",
      "label": "Figures Number 1 Detail"
    },
	{
      "type": "text",
      "id": "num2",
      "label": "Figures Number 2"
    },
	{
      "type": "text",
      "id": "num2_title",
      "label": "Figures Number 2 Title"
    },
	{
      "type": "text",
      "id": "num2_detail",
      "label": "Figures Number 2 Detail"
    },
	{
      "type": "text",
      "id": "num3",
      "label": "Figures Number 3"
    },
	{
      "type": "text",
      "id": "num3_title",
      "label": "Figures Number 3 Title"
    },
	{
      "type": "text",
      "id": "num3_detail",
      "label": "Figures Number 3 Detail"
    },
	{
      "type": "richtext",
      "id": "detail",
      "label": "Heading",
"default": "<p>Tell a Story</p>"
	}
],
  "presets": [
    {
      "category": "Advanced",
      "name": "Key Figures"
    }
  ]
  }
{% endschema %}

