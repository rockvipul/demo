<section class="page-container">
	{%- if section.settings.show_page_title -%}
		<div class="page-title container-wrap">
			<div class="container">
				<div class="row row-sm u-center">
					<h1>{{ page.title }}</h1>
				</div>
			</div>
		</div>
	{%- endif -%}

	<div class="container-wrap">
		<div class="container text-content rte">
			<div class="row row-sm">
				{{ page.content }}
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Default page",
	"settings": [
		{
			"type": "checkbox",
			"id": "show_page_title",
			"label": "Show page title",
			"default": true
		}
	]
}
{% endschema %}