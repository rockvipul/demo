<section class="account-page">
	<div class="container">
		<div class="row inline u-center">

			<div class="account-form block s1 med_s12">
				{%- form 'reset_customer_password' -%}

					<p class="block s1 size--heading-1 pad-xs">{{ 'customer.reset_password.title' | t }}</h1>

					<p class="block s1">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

					<div class="block s1 p c-error">
						{{- form.errors | default_errors -}}
					</div>

					<div class="inputGroup block s1">
						<label for="ResetPassword" class="c-gray">{{ 'customer.reset_password.password' | t }}</label>
						<input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
					</div>

					<div class="inputGroup block s1">
						<label for="PasswordConfirmation" class="c-gray">{{ 'customer.reset_password.password_confirm' | t }}</label>
						<input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}">
					</div>

					<input type="submit" class="account-form__submit button block" value="{{ 'customer.reset_password.submit' | t }}">

				{%- endform -%}
			</div>

		</div>
	</div>
</section>